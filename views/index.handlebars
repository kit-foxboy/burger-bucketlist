<div class="container jumbotron">
    <div class="row">
        <div class="col d-md-block d-sm-none">
            <img class="hidden-sm img-fluid" src="assets/img/cheeseburger-left.png">
        </div>
        <div class="col-md-6 col-sm-12 d-flex align-items-center justify-content-center">
            <form>
                <div class="row">
                    <div class="col">
                        <h1 class="display-4 text-center">Burger Bucketlist</h1>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-10">
                        <input type="text" class="form-control" id="add-burger" placeholder="Burger">
                    </div>
                    <div class="col-2">
                        <button class="btn btn-primary">Add</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col d-md-block d-sm-none">
            <img class="hidden-sm img-fluid" src="assets/img/cheeseburger-right.png">
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-header bg-primary text-light">
                    <h3>To Eat</h3>
                </div>
                <div class="card-body">
                    <ul class="list-group mx-0" id="to-eat-list">
                        {{#each burgers.toEat}}
                            {{> new-burger this }}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="card">
                <div class="card-header bg-primary text-light">
                    <h3>Eaten</h3>
                </div>
                <div class="card-body">
                    <ul class="list-group mx-0" id="eaten-list">
                        {{#each burgers.eaten}}
                            {{> burger this }}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>